<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgGray"
    android:orientation="vertical">

    <include layout="@layout/titlebar_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/defaultWhite"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_route_start"
            android:drawablePadding="5dp"
            android:text="选择出发地(最多3个):"
            android:textColor="@color/littleBlack"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add_route_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_add_route_choose" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/defaultWhite"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_route_end"
            android:drawablePadding="5dp"
            android:text="选择目的地(最多3个):"
            android:textColor="@color/littleBlack"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/add_route_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_add_route_choose" />

    </LinearLayout>

    <TextView
        android:id="@+id/add_route_car_model"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/defaultWhite"
        android:drawableLeft="@drawable/ic_add_route_carmodel"
        android:drawablePadding="5dp"
        android:drawableRight="@drawable/ic_arrow_right_gray"
        android:padding="10dp"
        android:text="选择车型："
        android:textColor="@color/littleBlack"
        android:textSize="16.0sp"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="60dp"
        app:cardCornerRadius="10dp">

        <Button
            android:id="@+id/add_route_btn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainColor"
            android:text="确定"
            android:textColor="@color/defaultWhite"
            android:textSize="16.0sp" />

    </android.support.v7.widget.CardView>

</LinearLayout>