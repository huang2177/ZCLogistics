<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_certificate_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableLeft="@drawable/ic_delete_black"
        android:drawablePadding="8dp"
        android:text="上传签收凭证"
        android:textColor="@color/black"
        android:textSize="16.0sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.module.base.widgets.ProgressImageView
            android:id="@+id/dialog_certificate_img"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/img_sample_certificate" />

        <ImageView
            android:id="@+id/dialog_certificate_upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/img_btn_upload" />


    </LinearLayout>

    <Button
        android:id="@+id/dialog_certificate_commit"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:background="@drawable/shape_login_blue_alpha"
        android:text="确 定"
        android:textColor="@color/defaultWhite"
        android:textSize="16.0sp" />


</LinearLayout>