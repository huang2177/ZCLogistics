<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp">

    <ImageView
        android:id="@+id/waybill_iv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_carrier_confirmed" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/waybill_tv_route"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上海 ⇀ 泰州"
            android:textColor="@color/black"
            android:textSize="18.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/waybill_tv_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="高拦车 9米 塑料瓶子 34吨"
            android:textColor="@color/black"
            android:textSize="16.0sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/waybill_tv_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/corner_white"
                android:padding="5dp"
                android:text="联系货主"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/waybill_tv_type2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/corner_white"
                android:padding="5dp"
                android:text="确认收货"
                android:textColor="@color/black" />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>