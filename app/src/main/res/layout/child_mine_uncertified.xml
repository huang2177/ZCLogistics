<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mine_ll_uncertified"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone"
    tools:showIn="@layout/fragment_mine">

    <TextView
        android:id="@+id/mine_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_uncertified"
        android:text="未认证"
        android:textColor="@color/black"
        android:textSize="16.0sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mine_tv_certify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:drawablePadding="10dp"
        android:drawableTop="@drawable/ic_btn_authenticate"
        android:text="认证通过后可发布车辆信息及抢接单哦！" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp">

        <TextView
            android:id="@+id/mine_tv_contact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_contact_service"
            android:drawablePadding="8dp"
            android:drawableRight="@drawable/ic_arrow_right_gray"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:text="联系客服"
            android:textColor="@color/black" />

    </android.support.v7.widget.CardView>

</LinearLayout>