<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_baseinfo"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="10dp">

    <com.myplas.l.common.widgets.RoundImageView
        android:id="@+id/detail_iv_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_default_user" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/detail_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:drawableLeft="@drawable/ic_item_bond"
            android:drawablePadding="5dp"
            android:text="吴小姐"
            android:textColor="@color/defaultWhite"
            android:textSize="16.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/detail_tv_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="上海中晨电子商务股份有限公司"
            android:textColor="@color/defaultWhite" />
    </LinearLayout>

</LinearLayout>
